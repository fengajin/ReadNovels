    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script>
        $(function () {

        })
        function Login() {
            $.ajax({
                url: "http://172.25.53.30:8050/managers/houTaiLogin",
                type: "get",
                async: false,
                data: $("#form1").serialize(),
                success: function (data) {
                    if (data != null) {
                        $.ajax({
                            url: "/Managerss/Logins",
                            type: "post",
                            data: JSON.stringify(data),
                            async: false,
                            dataType: "json",
                            contentType: "application/json",
                            success: function (a) {
                                location.href = "/Managerss/LoginIndex?id="+data.Id;
                            }
                        })
                    }
                    else {
                        layer.msg('登录失败！');
                    }
                }
            })
        }
    </script>

